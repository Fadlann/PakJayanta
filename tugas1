import queue

def tugasPakJayanta(a): 
    # a = array
    n = len(a) # ngambil panjang array
    result = [] # inisialisasi result atau hasil
    arrQueue = queue.Queue(maxsize=n) # buat queue namanya arrQueue
    arrQueue.put(a)
    while arrQueue.qsize() > 0:
        a = arrQueue.get()
        n = len(a)
        if n >= 1:
            pivot = n//2 # // = diturunin ke bawah kalau floating number krn merujuk ke length
            result.append(a[pivot]) # hasil dimasukin ke result

            l = a[:pivot] 
            r = a[pivot + 1:] 
            
            arrQueue.put(l)   
            arrQueue.put(r)
    # print outs
    print("")
    print("hasil setelah digituin")
    print(result)   


def getArrayInput():
    banyakBilangan = 0
    while banyakBilangan <= 20:
        banyakBilangan = int(input("Masukkan banyak jumlah bilangan : "))

    a = []
    for i in range(banyakBilangan):
        n = int(input("Masukkan angka ke " + str(i + 1) + ": "))
        a.append(n)

    print("")
    print("array yang telah diinput")
    print(a)

    return a
    
tugasPakJayanta(getArrayInput())
